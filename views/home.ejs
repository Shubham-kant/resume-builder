<link rel="stylesheet" href="/css/home.css">

<div>
    
    <form>
        <section id="user-info">
            <h2>info</h2>
            <div class="info">
                <input type="text" placeholder="your name" required>
                <input type="email" placeholder="your email-id" required>
                <input type="text" placeholder="tell me about yourself" required>
                <input type="tel" name="phone" placeholder="your phone number" required>
            </div>
        </section>
        <section id="education">
            <div class="util">
                <h2>Education</h2>
                <button class="add-btn">+</button>
            </div>
            <div>
                <button class="remove-btn">X</button>
                <div class="info">
                    <input type="text" name="degree" placeholder="degree" required>
                    <input type="text" name="college" placeholder="college or university name" required>
                    
                    <label for="start-date">Start Date</label>
                    <input type="date" name="start" id="start-date" value="2019-01-01" required>
                    
                    <label for="end-date">End Date</label>
                    <input type="date" name="end" id="end-date" value="2019-01-01" required>
                </div>
            </div>

        </section>
        <section id="exp">
            <div class="util">
                <h2>Experience</h2>
                <button class="add-btn">+</button>
            </div>
            <div >
                <button class="remove-btn">X</button>
                <div class="info">
                    <input type="text" name="name" placeholder="company name" required>
                    <textarea name="description" placeholder="describe what you have done in the company" required rows="10"></textarea>
                    <input type="text" name="designation" placeholder="deignation"  required>
                    
                    <label for="start-date">Start Date</label>
                    <input type="date" name="start" id="start-date" value="2019-01-01" required>
                    
                    <label for="end-date">End Date</label>
                    <input type="date" name="end" id="end-date" value="2019-01-01" required>
                </div>
            </div>


        </section>
        <section id="project">
            <div class="util">
                <h2>Project</h2>
                <button class="add-btn">+</button>


            </div>
            <div>
                <button class="remove-btn">X</button>
                <div class="info">
                        <input type="text" name="proect-name" placeholder="project's name" required>
                        <input type="text" name="project-description" placeholder="project description" required>


                </div>
            </div>

        </section>
        <input type="submit" value="SAVE">
    </form>
</div>

    
